<h1 class="col-md-3 ">Rotten Mangoes</h1>


<div class="search col-md-offset-6 col-md-3">
	<%= form_tag(movies_path, :method => "get", id: "search-form") do %>
	  <%= text_field_tag :search, params[:search], placeholder: "Search" %>
	  <%= select_tag(:duration, options_for_select([
	                [],
	  							['minutes < 90', 1], 
	  							['90 < minutes < 120', 2], 
	  							['120 < minutes', 3]])) %>

	  <%= submit_tag "Search", :name => nil %>
	<% end %>
</div>
