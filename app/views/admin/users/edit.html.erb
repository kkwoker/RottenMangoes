EDIT USER PAGE

<%= form_for [:admin, @user] do |f| %>
  <div>
    <%= f.label "firstname" %><br>
    <%= f.text_field "firstname" %>
  </div>
  <div>
    <%= f.label "lastname" %><br>
    <%= f.text_field "lastname" %>
  </div>
  <div>
    <%= f.label "email" %><br>
    <%= f.text_field "email" %>
  </div>
  <div class="field">
    <%= f.label "admin" %><br>
    <%= f.check_box :admin %>
  </div>
  <div>
    <%= f.submit "Submit" %> 
  </div>
<% end %>
