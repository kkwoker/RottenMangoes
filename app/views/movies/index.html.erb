<h1>Rotten Mangoes</h1>

<span class="text-center">
<div class="submit">
	<% if session[:user_id] %>
		<%= link_to "Submit a movie!", new_movie_path %>
	<% end %>
	<%= link_to "Back", movies_path %>
</div>
<div class="search">
	<%= form_tag(movies_path, :method => "get", id: "search-form") do %>
	  <%= text_field_tag :search, params[:search], placeholder: "Search" %>
	  <%= select_tag(:duration, options_for_select([
	                [],
	  							['Under 90 minutes', 1], 
	  							['Between 90 and 120 minutes', 2], 
	  							['Over 120 minutes', 3]])) %>

	  <%= submit_tag "Search", :name => nil %>
	<% end %>
</div>
	<ul class="pagination">
		<li><a href="#">&laquo;</a></li>
		<li><%= paginate @movies %></li>
		<li><a href="#">&laquo;</a></li>
	</ul>
</span>

<hr>
<table>
	<tbody>
		<% @movies.each do |movie| %>
		 <%= render partial: 'movie', locals: {movie: movie} %>
		<% end %>
	</tbody>
</table>